#############################
# Core Server
#############################
PORT=8080

#############################
# Gemini API
#############################
# REQUIRED in production and for real responses locally
GEMINI_API_KEY=your_google_ai_studio_key_here

# Primary model and comma-separated fallbacks (in order)
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MODELS=gemini-2.0-flash,gemini-1.5-pro,gemini-pro

#############################
# CORS
#############################
ALLOWED_ORIGINS=http://localhost:3000

#############################
# Rate Limiting
#############################
GLOBAL_RATE_LIMIT=100
SESSION_RATE_LIMIT=8
WINDOW_SECONDS=60

#############################
# Generation Limits
#############################
MAX_TOKENS=1024

#############################
